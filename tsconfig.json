{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "lib",
		"declaration": true,
		"target": "ES6",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": false,
		"strictNullChecks": true
	},
	"include": [
		"src/**/*.ts",
		"typings/**/*.d.ts"
	]
}

